<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewResultsWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Results"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCompatabilityIntro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCompatabilityIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/the_compatibility_score_is"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPercentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultsWelcome" />

    <TextView
        android:id="@+id/textViewPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="21dp"
        android:text="@string/percent"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResults"
        app:layout_constraintEnd_toEndOf="@+id/textViewResults"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompatabilityIntro" />

    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="72dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="73dp"
        android:text="results"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTryAgain"
        app:layout_constraintStart_toStartOf="@+id/buttonTryAgain"
        app:layout_constraintTop_toBottomOf="@+id/textViewPercentage" />

    <Button
        android:id="@+id/buttonTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="77dp"
        android:text="@string/try_again"
        app:layout_constraintBottom_toTopOf="@+id/buttonToMainFromResults"
        app:layout_constraintStart_toStartOf="@+id/buttonToMainFromResults"
        app:layout_constraintTop_toBottomOf="@+id/textViewResults" />

    <Button
        android:id="@+id/buttonToMainFromResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="258dp"
        android:text="@string/main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTryAgain" />

</androidx.constraintlayout.widget.ConstraintLayout>